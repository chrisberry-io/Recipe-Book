datasource DS {
  // optionally set multiple providers
  // example: provider = ["sqlite", "postgresql"]
  provider = "sqlite"
  url = "***"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Recipe {
  id            Int       @id @default(autoincrement())
  name          String
  description   String
  createdAt     DateTime  @default(now())
}

